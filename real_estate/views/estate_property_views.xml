 <record id="nothing" model="ir.ui.view">
        <field name="name">Test34</field>
        <field name="model">estate_property_type</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="name"/>
                 <field name="sequence" widget="handle"/>
            </list>
